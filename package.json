{
  "name": "ytmp4",
  "version": "1.0.0",
  "description": "Professional YouTube Stream and Download Server",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "postinstall": "npm run install-yt-dlp",
    "install-yt-dlp": "curl -L https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp -o /tmp/yt-dlp && chmod a+rx /tmp/yt-dlp && mv /tmp/yt-dlp /app/yt-dlp",
    "dev": "nodemon server.js",
    "start": "node server.js"
  },
  "keywords": [
    "express",
    "youtube",
    "yt-dlp",
    "stream",
    "download",
    "video",
    "audio"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "yt-dlp-wrap": "^2.3.12"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
